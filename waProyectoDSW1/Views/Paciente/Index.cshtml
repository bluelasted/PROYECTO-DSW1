@model IEnumerable<waProyectoDSW1.Models.PacienteModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Paciente / @ViewData["Title"]</h1>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Listado de Pacientes</h6>
    </div>
    <div class="card-body">

        <button type="button" class="btn btn-outline-primary" id="btnNuevoPaciente"><i class="fas fa-plus"></i> Nuevo Paciente</button>

        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Código</th>
                        <th>Nombre completo</th>
                        <th>DNI</th>
                        <th>Teléfono</th>
                        <th>Email</th>
                        <th>Dirección</th>
                        <th>Fecha Nacimiento</th>
                        <th>Género</th>
                        <th>Alergias</th>
                        <th>Fec. Ult. Visita</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.pk_paciente</td>
                            <td>@item.nombres @item.apellidos</td>
                            <td>@item.cedula</td>
                            <td>@item.telefono</td>
                            <td>@item.email</td>
                            <td>@item.direccion</td>
                            <td>@item.fechaNacimiento</td>
                            <td>@item.genero</td>
                            <td>@item.alergias</td>
                            <td>@item.fechaUltimaVisita</td>
                            <td>
                                <button class="btn-editar btn btn-primary" data-id="@item.pk_paciente" type="button">
                                    <i class="fas fa-pen"></i>
                                </button>
                                <button class="btn-borrar btn btn-danger" data-id="@item.pk_paciente" type="button">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div id="modalContainer"></div>

@section scripts {
    <!-- Scripts Base -->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/demo/datatables-demo.js"></script>

    <!-- Scripts Nuevos -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/page/page_Paciente.js"></script>
}
