@model waProyectoDSW1.Models.CitaModel

@{
    Layout = null;
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalle de Cita - Clínica Dental San José</title>
    <style>
        body {
            font-family: 'Helvetica', 'Arial', sans-serif;
            line-height: 1.6;
            color: #333;
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f9f9f9;
        }

        .container {
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            padding: 30px;
            margin-bottom: 30px;
        }

        .header {
            text-align: center;
            padding-bottom: 20px;
            border-bottom: 2px solid #3498db;
            margin-bottom: 30px;
        }

        h1 {
            color: #3498db;
            margin: 0;
            font-size: 28px;
        }

        .subheader {
            color: #7f8c8d;
            font-size: 16px;
            margin-top: 5px;
        }

        .appointment-details {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-bottom: 30px;
        }

        .patient-info, .appointment-info {
            background-color: #f8f9fa;
            border-radius: 6px;
            padding: 20px;
            border-left: 4px solid #3498db;
        }

        h2 {
            color: #3498db;
            font-size: 20px;
            margin-top: 0;
            margin-bottom: 15px;
            padding-bottom: 10px;
            border-bottom: 1px solid #e0e0e0;
        }

        .info-row {
            margin-bottom: 12px;
            display: flex;
        }

        .info-label {
            font-weight: bold;
            width: 140px;
            color: #555;
        }

        .info-value {
            flex: 1;
        }

        .observations {
            background-color: #f8f9fa;
            border-radius: 6px;
            padding: 20px;
            margin-bottom: 30px;
            border-left: 4px solid #2ecc71;
        }

        .service-info {
            background-color: #f8f9fa;
            border-radius: 6px;
            padding: 20px;
            border-left: 4px solid #e74c3c;
            margin-bottom: 30px;
        }

        .footer {
            text-align: center;
            margin-top: 30px;
            padding-top: 20px;
            border-top: 1px solid #e0e0e0;
            color: #7f8c8d;
            font-size: 14px;
        }

        .appointment-number {
            background-color: #3498db;
            color: white;
            padding: 5px 15px;
            border-radius: 20px;
            display: inline-block;
            font-weight: bold;
            margin-top: 10px;
        }

        .important-note {
            background-color: #fef9e7;
            border-left: 4px solid #f1c40f;
            padding: 15px;
            margin-top: 20px;
            border-radius: 6px;
        }

            .important-note h3 {
                color: #d35400;
                margin-top: 0;
                margin-bottom: 10px;
                font-size: 18px;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <div class="logo">
                 <img src="~/img/clinica-san-jose-650x200color.png" />
            </div>
            <h1>Cuidamos tu sonrisa con profesionalidad</h1>
            <div class="appointment-number">CITA #@Model.pk_cita</div>
        </div>

        <div class="appointment-details">
            <div class="patient-info">
                <h2>Información del Paciente</h2>
                <div class="info-row">
                    <div class="info-label">Nombre:</div>
                    <div class="info-value">@Model.nombrePaciente</div>
                </div>
                <div class="info-row">
                    <div class="info-label">DNI:</div>
                    <div class="info-value">@Model.dniPaciente</div>
                </div>
                <div class="info-row">
                    <div class="info-label">Email:</div>
                    <div class="info-value">@Model.email</div>
                </div>
                <div class="info-row">
                    <div class="info-label">Dirección:</div>
                    <div class="info-value">@Model.direccion</div>
                </div>
                <div class="info-row">
                    <div class="info-label">Fecha Nacimiento:</div>
                    <div class="info-value">@(Model.fechaNacimiento != default(DateTime) ? Model.fechaNacimiento.ToString("dd/MM/yyyy") : "No disponible")</div>
                </div>
                <div class="info-row">
                    <div class="info-label">Edad:</div>
                    <div class="info-value">@Model.edad años</div>
                </div>
                <div class="info-row">
                    <div class="info-label">Alergias:</div>
                    <div class="info-value">@(string.IsNullOrEmpty(Model.alergias) ? "Ninguna registrada" : Model.alergias)</div>
                </div>
            </div>

            <div class="appointment-info">
                <h2>Detalles de la Cita</h2>
                <div class="info-row">
                    <div class="info-label">Estado:</div>
                    <div class="info-value">@Model.nombreEstado</div>
                </div>
                <div class="info-row">
                    <div class="info-label">Fecha:</div>
                    <div class="info-value">@Model.fechaCita.ToString("dddd, dd 'de' MMMM 'de' yyyy")</div>
                </div>
                <div class="info-row">
                    <div class="info-label">Hora de inicio:</div>
                    <div class="info-value">@Model.horaInicio.ToString(@"hh\:mm")</div>
                </div>
                <div class="info-row">
                    <div class="info-label">Hora de fin:</div>
                    <div class="info-value">@Model.horaFin.ToString(@"hh\:mm")</div>
                </div>
                <div class="info-row">
                    <div class="info-label">Duración:</div>
                    <div class="info-value">@Model.duracion minutos</div>
                </div>
                <div class="info-row">
                    <div class="info-label">Precio:</div>
                    <div class="info-value">S/. @Model.precio.ToString("0.00")</div>
                </div>
            </div>
        </div>

        <div class="service-info">
            <h2>Servicio Dental</h2>
            <div class="info-row">
                <div class="info-label">Servicio:</div>
                <div class="info-value">@Model.nombreServicio</div>
            </div>
            <div class="info-row">
                <div class="info-label">Especialidad:</div>
                <div class="info-value">@Model.descripcionEspecialidad</div>
            </div>
            <div class="info-row">
                <div class="info-label">Doctor:</div>
                <div class="info-value">@Model.nombreDoctor</div>
            </div>
        </div>

        <div class="observations">
            <h2>Observaciones</h2>
            <p>@(string.IsNullOrEmpty(Model.observaciones) ? "No hay observaciones adicionales para esta cita." : Model.observaciones)</p>
        </div>

        <div class="important-note">
            <h3>Información Importante</h3>
            <p>Por favor, preséntese 10 minutos antes de la hora programada. Si necesita cancelar o reprogramar su cita, hágalo con al menos 24 horas de anticipación.</p>
            <p>Recuerde traer su documento de identidad y cualquier radiografía o historial médico relevante.</p>
        </div>

        <div class="footer">
            <p>Clínica Dental San José | Avenida Géminis E – 27 Urbanización Papa, San Borja 15037 | Tel: (01) 2259510</p>
            <p>www.clinicadentalsanjose.com | info@clinicadentalsanjose.com</p>
            <p>Documento generado el @DateTime.Now.ToString("dd/MM/yyyy 'a las' HH:mm")</p>
        </div>
    </div>
</body>


